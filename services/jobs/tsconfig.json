{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./src",
        "outDir": "./build",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "types": [
            "node",
            "@types/jest"
        ],
        "resolveJsonModule": true,
        "lib": [
            "dom",
            "es6"
        ],
    },
    "include": [
        "**/*"
    ]
}